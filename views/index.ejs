<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/output.css">
</head>
<body>
    <h1>This is the homepage</h1>
    <form action="/new" method="POST">
        <label for="nameinput">Pharmacy Name</label>
        <input class="input input-bordered input-primary input-md w-full max-w-xs" type="text" name="nameinput">
        <br>
        <label for="addressinput">Pharmacy Address</label>
        <input class="input input-bordered input-primary input-md w-full max-w-xs" type="text" name="addressinput">
        <br>
        <label for="numinput">Phone Number</label>
        <input class="input input-bordered input-primary input-md w-full max-w-xs" type="text" name="numinput">
        <br>
        <span>In Stock?</span><br>
        <input class="radio radio-primary" type="radio" id="yes" name="instock" value="Yes">
        <label for="yes">Yes</label><br>
        <input class="radio radio-primary" type="radio" id="no" name="instock" value="No">
        <label for="no">No</label><br>
        <button class="btn btn-wide" type="submit">Add</button>
    </form>
    <ul>
        <div class="flex justify-center items-center">
        <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-5 grid-cols-1">
       <% itemList.forEach(item => { %>
        <li>
            <div class="card w-96 bg-base-100 shadow-xl">
                 <div class="card-body">
                    <div class="card-title"><%= item.nameinput %></div>
                    <div><%= item.addressinput %></div>
                    <div><%= item.numinput %></div>
                    <div><span>In Stock?</span><%= item.instock %></div>
                    <div><span>Last Updated:</span><%= item.date.toLocaleString() %></div>
                    <div class="card-actions justify-end">
                    <a href="/edit/<%= item._id %>" class="btn btn-secondary">Edit</a>
                    <a href="/edit/remove/<%= item._id %>" class="btn btn-secondary">Remove</a>
                    </div>
                 </div>
             </div>
        </li>
    <% }) %>
    </div>
</div>
    </ul>
</body>
</html>





