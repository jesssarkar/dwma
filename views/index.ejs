<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>This is the homepage</h1>
    <form action="/new" method="POST">
        <label for="nameinput">Pharmacy Name</label>
        <input type="text" name="nameinput">
        <br>
        <label for="addressinput">Pharmacy Address</label>
        <input type="text" name="addressinput">
        <br>
        <label for="numinput">Phone Number</label>
        <input type="text" name="numinput">
        <br>
        <span>In Stock?</span><br>
        <input type="radio" id="yes" name="instock" value="Yes">
        <label for="yes">Yes</label><br>
        <input type="radio" id="no" name="instock" value="No">
        <label for="no">No</label><br>
        <button type="submit">Add</button>
    </form>
    <ul>
       <% itemList.forEach(item => { %>
        <li>
             <div><%= item.nameinput %></div>
             <div><%= item.addressinput %></div>
             <div><%= item.numinput %></div>
             <div><span>In Stock?</span><%= item.instock %></div>
             <div><span>Last Updated:</span><%= item.date.toLocaleString() %></div>
             <a href="/edit/<%= item._id %>">Edit</a>
             <a href="/edit/remove/<%= item._id %>">Remove</a>
        </li>
    <% }) %>
    </ul>
</body>
</html>